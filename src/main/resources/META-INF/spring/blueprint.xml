<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">


    <bean id="header" class="org.motechproject.osgi.web.Header"></bean>

    <bean id="moduleRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="moduleName" value="commcare-mrs-mapper" />
        <constructor-arg name="url" value="../commcare-mrs-mapper/resources/index.html" />
        <constructor-arg name="angularModules">
            <list>
                <value>commcare-mrs-mapper</value>
            </list>
        </constructor-arg>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../commcare-mrs-mapper/resources/messages/"/>
            </map>
        </constructor-arg>
        <constructor-arg name="header" ref="header"/>
    </bean>

    <import resource="classpath:META-INF/motech/applicationContext-commcare-mrs-mapper.xml"/>

    <osgi:reference id="formService" cardinality="0..1"
                    interface="org.motechproject.commcare.service.CommcareFormService"/>

    <osgi:reference id="commcareCaseServiceOsgi" cardinality="0..1"
                    interface="org.motechproject.commcare.service.CommcareCaseService"/>

    <osgi:reference id="commcareUserServiceOsgi" cardinality="0..1"
                    interface="org.motechproject.commcare.service.CommcareUserService"/>

    <osgi:reference id="eventRelayOsgi" cardinality="0..1" interface="org.motechproject.event.listener.EventRelay"/>

    <osgi:reference id="couchDbManager" interface="org.motechproject.commons.couchdb.service.CouchDbManager"/>

    <osgi:reference id="personAdapterOsgi" cardinality="0..1"
                    interface="org.motechproject.mrs.services.MRSPatientAdapter"/>

    <osgi:reference id="encounterAdapterOsgi" cardinality="0..1"
                    interface="org.motechproject.mrs.services.MRSEncounterAdapter"/>

    <osgi:reference id="userAdapterOsgi" cardinality="0..1" interface="org.motechproject.mrs.services.MRSUserAdapter"/>

    <osgi:reference id="providerAdapterOsgi" cardinality="0..1"
                    interface="org.motechproject.mrs.services.MRSProviderAdapter"/>

    <osgi:reference id="observationAdapterOsgi" cardinality="0..1"
                    interface="org.motechproject.mrs.services.MRSObservationAdapter"/>

    <osgi:reference id="facilityAdapterOsgi" cardinality="0..1"
                    interface="org.motechproject.mrs.services.MRSFacilityAdapter"/>

    <osgi:reference id="eventListenerRegistry"
                    interface="org.motechproject.event.listener.EventListenerRegistryService"/>

    <osgi:reference id="platformSettingsService"
                    interface="org.motechproject.server.config.service.PlatformSettingsService"/>

    <osgi:service id="formAdapter" ref="allFormsAdapter" interface="org.motechproject.mapper.adapters.FormAdapter"/>

</beans>